<ul class="sidebar-nav anchors <%- page.type %>" onmouseover="document.body.style.overflow=&quot;hidden&quot;" onmouseout="document.body.style.overflow=&quot;auto&quot;">
    <% if (type === 'api') { %>
        <%- partial('_partial/api-sidebar') %>
    <% } %>
    <% if (type === 'community') { %>
        <li><h3>Community</h3></li>
        <li>
            <a href="https://twitter.com/strudeljs" class="sidebar-nav__link" rel="external nofollow" target="_blank">Twitter</a>
        </li>
        <li>
            <a href="https://gitter.im/strudel-js" class="sidebar-nav__link" rel="external nofollow" target="_blank">Gitter</a>
        </li>
        <li>
            <a href="https://medium.com/strudel-js" class="sidebar-nav__link" rel="external nofollow" target="_blank">Blog</a>
        </li>
        <li>
            <a href="https://github.com/strudeljs/roadmap" class="sidebar-nav__link" rel="external nofollow" target="_blank">Roadmap</a>
        </li>
    <% } %>
    <% site.pages.find({type: type}).sort('order').each(function (p) { %>
        <% if (p.hideInSidebar) { %>
            <% return false; %>
        <% } %>
        <% var fileName = p.path.replace(/^.+?\/([\w-]+)\.html/, '$1') %>
        <% if (type === 'guide') { %>
            <% if (fileName === 'installation') { %>
                <li><h3>Overview</h3></li>
            <% } %>
            <% if (fileName === 'initialization') { %>
                <li><h3>Advanced</h3></li>
            <% } %>
            <% if (fileName === 'cli') { %>
                <li><h3>Ecosystem</h3></li>
            <% } %>
        <% } %>
        <% if (type === 'examples') { %>
            <% if (fileName === 'index') { %>
                <li><h3>Examples</h3></li>
            <% } %>
        <% } %>
        <li>
            <a href="<%- url_for(p.path) %>" class="sidebar-nav__link<%- page.title === p.title ? ' current' : '' %>"><%- p.title %></a>
        </li>
    <% }) %>
</ul>
